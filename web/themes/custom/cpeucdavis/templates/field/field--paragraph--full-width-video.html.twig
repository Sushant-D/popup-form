{#
/**
 * @file
 * Theme override for a field in full-width-video paragraph.
 */
#}

<div class="video-container">
  <div class="video-wrapper">
    {% if label_hidden %}
      {% if multiple %}
        {% for item in items %}
          {{ item.content }}
        {% endfor %}
      {% else %}
        {% for item in items %}
          {{ item.content }}
        {% endfor %}
      {% endif %}
    {% else %}
      {% if multiple %}
        {% for item in items %}
          {{ item.content }}
        {% endfor %}
      {% else %}
        {% for item in items %}
          {{ item.content }}
        {% endfor %}
      {% endif %}
    {% endif %}
  </div>

  <div class="controls" role="region" aria-label="Video controls">
    <button class="play-btn" id="playPauseBtn" aria-label="Play video">
      <span class="play-icon" aria-hidden="true"></span>
      <span class="pause-icon" aria-hidden="true"></span>
    </button>

    <div class="progress-container">
      <div class="progress-bar" role="presentation">
        <div class="progress-filled" id="progressFilled"></div>
        <input type="range" class="progress-input" id="progressInput" min="0" max="100" value="0" step="0.1"
          aria-label="Video progress" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"
          aria-valuetext="0 seconds of 0 seconds">
      </div>
    </div>
  </div>
</div>
