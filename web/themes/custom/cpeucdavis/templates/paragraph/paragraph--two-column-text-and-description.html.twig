{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
    {% block content %}
        {% set description = content.field_description['#items'].0.value %}
        {% set modified_description = description|replace({'<p>': '<p class="description">'}) %}
        <section {{ attributes.addClass(classes).addClass('workforce-section') }}>
            <div class="container-workforce commom-width-section">
                <div class="workforce-content">
                    <div class="workforce-left">
                        <h2>{{content.field_heading|raw}}</h2>
                    </div>
        
                    <div class="workforce-right">
                        {{ modified_description|raw }}
                    </div>
                </div>
            </div>
        </section>
    {% endblock %}
{% endblock paragraph %}